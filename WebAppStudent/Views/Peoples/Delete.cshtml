@model WebAppStudent.Models.People
@{
  ViewData["Title"] = "Excluir?";
}
<h1>Excluir?</h1>
<h3>Você deseja excluir esse registro?</h3>
<div>
  <h4>Pessoa</h4>
  <hr />
  <dl class="row">
    <dt class="col-sm-2">
      Id
    </dt>
    <dd class="col-sm-10">
      @Html.DisplayFor(model => model.Id)
    </dd>
    <dt class="col-sm-2">
      Nome
    </dt>
    <dd class="col-sm-10">
      @Html.DisplayFor(model => model.Name)
    </dd>
    <dt class="col-sm-2">
      Ativo
    </dt>
    <dd class="col-sm-10">
      @Html.DisplayFor(model => model.Active)
    </dd>
  </dl>
  <form asp-action="Delete" onsubmit="return confirm('Deseja excluir?')">
    <input type="submit" value="Excluir" class="btn btn-danger" /> | <a asp-action="Index" class="btn btn-info">Voltar</a>
  </form>
</div>