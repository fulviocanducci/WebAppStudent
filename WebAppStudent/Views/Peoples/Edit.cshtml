@model WebAppStudent.Models.People
@{
  ViewData["Title"] = "Alterar Pessoa";
}
<h1>Alterar Pessoa</h1>
<h4>Pessoa</h4>
<hr />
@(await Html.PartialAsync("Status"))
<div class="row">
  <div class="col-md-12">
    <form asp-action="Edit">
      <div asp-validation-summary="ModelOnly" class="text-danger"></div>
      <input asp-for="Id" class="form-control" type="hidden" />
      <div class="form-group">
        <label asp-for="Name" class="control-label">Nome</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
      </div>
      <div class="form-group form-check">
        <label class="form-check-label">
          <input class="form-check-input" asp-for="Active" /> Ativo
        </label>
      </div>
      <div class="form-group">
        <input type="submit" value="Alterar" class="btn btn-primary" /> | <a asp-action="Index" class="btn btn-info">Voltar</a>
      </div>
    </form>
  </div>
</div>
@section Scripts {
  @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}